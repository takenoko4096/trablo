{
    "format_version": "1.26.1",
    "minecraft:entity": {
        "description": {
            "identifier": "trablo:entity",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "properties": {
                "trablo:ai": {
                    "type": "bool",
                    "default": false
                },
                "trablo:command_block": {
                    "type": "enum",
                    "values": [
                        "impulse", "repeat", "chain"
                    ],
                    "default": "impulse",
                    "client_sync": true
                }
            }
        },
        "component_groups": {
            "brain": {
                "minecraft:behavior.random_look_around": {
                    "priority": 9
                },
                "minecraft:behavior.look_at_player": {
                    "priority": 5,
                    "look_distance": 4,
                    "probability": 0.02
                },
                "minecraft:movement": {
                    "value": 0.2
                },
                "minecraft:movement.basic": {},
                "minecraft:navigation.generic": {},
                "minecraft:behavior.random_stroll": {
                    "priority": 4,
                    "interval": 140
                }
            }
        },
        "components": {
            "minecraft:physics": {},
            "minecraft:nameable": {},
            "minecraft:collision_box": {
                "width": 0.75,
                "height": 1.75
            },
            "minecraft:pushable": {
                "is_pushable": true
            }
        },
        "events": {
            "trablo:toggle_ai": {
                "sequence": [
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "trablo:ai",
                            "operator": "==",
                            "value": false
                        },
                        "add": {
                            "component_groups": ["brain"]
                        }
                    },
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "trablo:ai",
                            "operator": "==",
                            "value": true
                        },
                        "remove": {
                            "component_groups": ["brain"]
                        }
                    },
                    {
                        "filters": {
                            "test": "has_component",
                            "subject": "self",
                            "operator": "!=",
                            "value": "minecraft:navigation.generic"
                        },
                        "set_property": {
                            "trablo:ai": false
                        }
                    },
                    {
                        "filters": {
                            "test": "has_component",
                            "subject": "self",
                            "operator": "==",
                            "value": "minecraft:navigation.generic"
                        },
                        "set_property": {
                            "trablo:ai": true
                        }
                    }
                ]
            },
            "minecraft:entity_spawned": {
                "trigger": "trablo:toggle_ai"
            }
        }
    }
}
