{
    "format_version": "1.26.1",
    "minecraft:entity": {
        "description": {
            "identifier": "trablo:entity",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "properties": {
                "trablo:ai": {
                    "type": "bool",
                    "default": false
                }
            },
            "animations": {
                "ai": "controller.animation.trablo.ai",
                "variant": "controller.animation.trablo.variant"
            },
            "scripts": {
                "animate": [
                    "ai", "variant"
                ]
            }
        },
        "component_groups": {
            "brain": {
                "minecraft:behavior.random_look_around": {
                    "priority": 9
                },
                "minecraft:behavior.look_at_player": {
                    "priority": 5,
                    "look_distance": 4,
                    "probability": 0.02
                },
                "minecraft:movement": {
                    "value": 0.2
                },
                "minecraft:movement.basic": {},
                "minecraft:navigation.generic": {},
                "minecraft:behavior.random_stroll": {
                    "priority": 4,
                    "interval": 140
                }
            },
            "impulse": {
                "minecraft:variant": {
                    "value": 0
                }
            },
            "repeat": {
                "minecraft:variant": {
                    "value": 1
                }
            },
            "chain": {
                "minecraft:variant": {
                    "value": 2
                }
            }
        },
        "components": {
            "minecraft:physics": {},
            "minecraft:nameable": {},
            "minecraft:collision_box": {
                "width": 0.75,
                "height": 1.75
            },
            "minecraft:pushable": {
                "is_pushable": true
            }
        },
        "events": {
            "trablo:toggle_ai": {
                "sequence": [
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "trablo:ai",
                            "operator": "==",
                            "value": false
                        },
                        "add": {
                            "component_groups": ["brain"]
                        },
                        "set_property": {
                            "trablo:ai": true
                        }
                    },
                    {
                        "filters": {
                            "test": "bool_property",
                            "domain": "trablo:ai",
                            "operator": "==",
                            "value": true
                        },
                        "remove": {
                            "component_groups": ["brain"]
                        },
                        "set_property": {
                            "trablo:ai": false
                        }
                    }
                ]
            },
            "trablo:impulse": {
                "add": {
                    "component_groups": ["impulse"]
                },
                "remove": {
                    "component_groups": ["repeat", "chain"]
                }
            },
            "trablo:repeat": {
                "add": {
                    "component_groups": ["repeat"]
                },
                "remove": {
                    "component_groups": ["chain", "impulse"]
                }
            },
            "trablo:chain": {
                "add": {
                    "component_groups": ["chain"]
                },
                "remove": {
                    "component_groups": ["impulse", "repeat"]
                }
            },
            "minecraft:entity_spawned": {
                "trigger": "trablo:toggle_ai"
            }
        }
    }
}
